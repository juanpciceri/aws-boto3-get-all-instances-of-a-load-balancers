import json
import boto3

def lambda_handler(event, context):
    # TODO implement
    client = boto3.client('elbv2')
    response = client.describe_load_balancers()
    for loadbalancer in response['LoadBalancers']:
        d=loadbalancer['LoadBalancerArn']
        target=client.describe_target_groups( LoadBalancerArn=str(d))
        
        health=client.describe_target_health(TargetGroupArn=str(target['TargetGroups'][0]['TargetGroupArn']))
        print(target['TargetGroups'][0]['LoadBalancerArns'])
        print(health['TargetHealthDescriptions'])
